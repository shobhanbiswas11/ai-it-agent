# OpenAI Authentication Type: "openai" or "azure"
OPENAI_AUTH_TYPE=openai

# OpenAI Configuration (when OPENAI_AUTH_TYPE=openai)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Azure OpenAI Configuration (when OPENAI_AUTH_TYPE=azure)
# Azure AD Authentication
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_TENANT_ID=your-tenant-id
# Azure OpenAI Resource
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Storage Configuration
VECTOR_STORE_PATH=./data/vector-store
SQLITE_DB_PATH=./data/tickets.db
